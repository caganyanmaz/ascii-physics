{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "debug",
            "displayName": "Debug Build",
            "description": "Unoptimized build with debug info",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "ENABLE_TESTS": "ON"
            }
        },
        {
            "name": "release",
            "displayName": "Release Build",
            "description": "Fully optimized build, no debug info",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build-release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "ENABLE_TESTS": "OFF"
            }
        },
        {
            "name": "relwithdebinfo",
            "displayName": "RelWithDebInfo Build",
            "description": "Optimized build with debug symbols and frame pointers (for profiling)",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build-prof",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "CMAKE_CXX_FLAGS_RELWITHDEBINFO": "-fno-omit-frame-pointer -march=native",
                "CMAKE_C_FLAGS_RELWITHDEBINFO": "-fno-omit-frame-pointer -march=native",
                "ENABLE_TESTS": "ON",
                "DISABLE_INLINING": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "debug",
            "configurePreset": "debug"
        },
        {
            "name": "release",
            "configurePreset": "release"
        },
        {
            "name": "relwithdebinfo",
            "configurePreset": "relwithdebinfo"
        }
    ],
    "testPresets": [
        {
            "name": "debug",
            "configurePreset": "debug",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "relwithdebinfo",
            "configurePreset": "relwithdebinfo",
            "output": {
                "outputOnFailure": true
            }
        }
    ]
}